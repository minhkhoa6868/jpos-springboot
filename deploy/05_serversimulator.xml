<server class="org.jpos.q2.iso.QServer" logger="Q2"
  name="simulator_10000">
    <attr name="port" type="java.lang.Integer">10000</attr>
    <!-- accept multiple simultaneous sockets (defaults 100) -->
    <!-- initial thread pool size -->
    <attr name="minSessions" type="java.lang.Integer">10</attr>
    <!-- maximum threads allowed -->
    <attr name="maxSessions" type="java.lang.Integer">20</attr>
    <channel class="org.jpos.iso.channel.XMLChannel"
        logger="Q2" packager="org.jpos.iso.packager.XMLPackager">
    </channel>
    <!-- <request-listener class="org.jpos.bsh.BSHRequestListener" logger="Q2">
        <property name="source" value="cfg/serversimulator.bsh" />
    </request-listener> -->
    <request-listener class="com.example.jpos_springboot.server.MyISORequestListener" logger="Q2" >
        <property name="space" value="transient:default" />
        <property name="queue" value="TXNQueue" />
        <property name="spaceTimeout" value="60000" />
    </request-listener>

    <in>network-in</in>
    <out>network-out</out>
    <ready>network.ready</ready>
    <!-- <send-request>LAST</send-request> --> <!-- default last connected -->
    <send-request>RR</send-request> <!-- round-robin -->
</server>